<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="goronald.web.id.catalogmovieuiux">

    <permission
        android:name="goronald.web.id.catalogmovieuiux.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="goronald.web.id.catalogmovieuiux.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".provider.FavouriteMovieProvider"
            android:authorities="goronald.web.id.catalogmovieuiux"
            android:enabled="true"
            android:exported="true"
            android:readPermission="goronald.web.id.catalogmovieuiux.READ_DATABASE"
            android:writePermission="goronald.web.id.catalogmovieuiux.WRITE_DATABASE" />

    </application>

</manifest>